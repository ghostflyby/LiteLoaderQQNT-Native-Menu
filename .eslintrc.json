{
    "env": {
        "browser": true,
        "es2021": true
    },
    "plugins": [
        "@stylistic"
    ],
    "extends": [
        "standard-with-typescript",
        "plugin:@stylistic/disable-legacy"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "@stylistic/comma-dangle": [
            "error",
            "always-multiline"
        ]
    },
    "ignorePatterns": [
        "build.mjs"
    ]
}